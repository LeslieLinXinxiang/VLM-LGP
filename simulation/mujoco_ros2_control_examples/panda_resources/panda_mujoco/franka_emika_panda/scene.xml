<mujoco model="panda scene">
  <include file="panda.xml"/>

  <statistic center="0 -0.3 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <!-- [NEW] 定义工件的物理属性: 硬接触、无磁力、标准摩擦 -->
  <default>
    <default class="workpiece">
      <geom solimp="0.999 0.999 0.001" 
            solref="0.004 1" 
            friction="1.0 0.005 0.0001" 
            condim="4" 
            margin="0.0"/>
    </default>
  </default>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <!-- 8 Cylinders: 全部应用 class="workpiece" -->
    <body name="cyl1" pos="0.5 0.4 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="0 0.8 0 1" mass="0.2"/></body>
    <body name="cyl2" pos="0.4 0.4 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="1 0.9 0 1" mass="0.2"/></body>
    <body name="cyl3" pos="0.45 0.55 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="0 0.9 0.9 1" mass="0.2"/></body>
    <body name="cyl4" pos="0.3 0.55 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="0.9 0 0.9 1" mass="0.2"/></body>
    <body name="cyl5" pos="0.3 0.65 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="1 0.5 0 1" mass="0.2"/></body>
    <body name="cyl6" pos="0.15 0.65 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="0.5 0 0.8 1" mass="0.2"/></body>
    <body name="cyl7" pos="0.3 0.8 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="1 0.4 0.7 1" mass="0.2"/></body>
    <body name="cyl8" pos="0.15 0.8 0.035"><freejoint/><geom class="workpiece" type="cylinder" size="0.03 0.035" rgba="0.6 0.3 0.1 1" mass="0.2"/></body>

    <!-- 3 Bases: 箱体和把手都应用 class="workpiece" -->
    <body name="base1" pos="0.45 -0.45 0.015">
        <freejoint/>
        <geom class="workpiece" type="box" size="0.175 0.225 0.015" rgba="0.8 0.8 0.8 1" mass="0.5"/>
        <geom class="workpiece" name="base1_handle" type="box" size="0.02 0.02 0.025" pos="0 0 0.035" rgba="0.5 0.5 0.5 1"/>
    </body>
    <body name="base2" pos="0.07 -0.45 0.015">
        <freejoint/>
        <geom class="workpiece" type="box" size="0.175 0.225 0.015" rgba="0.9 0.1 0.1 1" mass="0.5"/>
        <geom class="workpiece" name="base2_handle" type="box" size="0.02 0.02 0.025" pos="0 0 0.035" rgba="0.5 0.5 0.5 1"/>
    </body>
    <body name="base3" pos="-0.31 -0.45 0.015">
        <freejoint/>
        <geom class="workpiece" type="box" size="0.175 0.225 0.015" rgba="0.1 0.1 0.9 1" mass="0.5"/>
        <geom class="workpiece" name="base3_handle" type="box" size="0.02 0.02 0.025" pos="0 0 0.035" rgba="0.5 0.5 0.5 1"/>
    </body>
  </worldbody>
</mujoco>